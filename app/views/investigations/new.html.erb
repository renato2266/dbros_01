<h1>New investigation</h1>

<% form_for(@investigation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :indagine %><br />
    <%= f.text_field :indagine %>
  </p>
  <p>
    <%= f.label :reparto %><br />
    <%= f.text_field :reparto %>
  </p>
  <p>
    <%= f.label :data_inizio %><br />
    <%= f.date_select :data_inizio, :start_year => 2005, :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label :data_fine %><br />
    <%= f.date_select :data_fine, :include_blank => true, :use_month_numbers => true %>
  </p>
  <p>
    <%= f.label :note_indagine %><br />
    <%= f.text_area :note_indagine %>
  </p>
<p>
	<%= f.label :names %><br />
	<%= f.collection_select :name_ids, @names, :id, :cognome_nome, {}, :multiple => true%>
 </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', investigations_path %>