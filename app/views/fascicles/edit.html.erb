<h1>Editing fascicle</h1>

<% form_for(@fascicle) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :numero %><br />
    <%= f.text_field :numero %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
Name:<br/>
<div style="width:350px;height:400px;overflow-y: scroll; border:1px solid black;">
	<table border="3">
			<tr>
			<td>
		        <% @names.each do |name|  %>
		          <%= check_box_tag "fascicle[name_ids][]", name.id, @fascicle.names.include?(name) %>
		          <%= name.cognome_nome %>
				  <%= name.luogo_nascita %>
			      <%= name.data_nascita %> 
					<br/>	
		       <%end%>
		 </td>
		</tr>
		</table>
</div>

Societ√† - associazioni:<br/>
<div style="width:350px;height:400px;overflow-y: scroll; border:1px solid black;">
	<table border="3">
			<tr>
			<td>
		        <% @societies.each do |society|  %>
		          <%= check_box_tag "fascicle[society_ids][]", society.id, @fascicle.societies.include?(society) %>
		          <%= society.denominazione %>
				   
					<br/>	
		       <%end%>
		 </td>
		</tr>
		</table>
</div>


  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

