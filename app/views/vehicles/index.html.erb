<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Tipo</th>
    <th>Targa</th>
    <th>Modello</th>
    <th>Colore</th>
    <th>Note</th>
	<th>Edit</th>	
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= link_to vehicle.tipo, vehicle %></td>
    <td><%=h vehicle.targa %></td>
    <td><%=h vehicle.modello %></td>
    <td><%=h vehicle.colore %></td>
    <td><%=h vehicle.note %></td>
    <td><%= link_to 'Show', vehicle %>
    <%= link_to 'Edit', edit_vehicle_path(vehicle) %>
    <%= link_to 'Destroy', vehicle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

