<h1>Listing associations</h1>

<% form_tag associations_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :date => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Associazione criminale</th>
    <th>Note associazione</th>
    <th>Azioni</th>
  </tr>

<% @associations.each do |association| %>

  <tr>
    <td><%=h association.associazione_criminale %></td>
    <td><%=h association.note_associazione %></td>
    <td><%= link_to 'Show', association %>
    <%= link_to 'Edit', edit_association_path(association) %>
    <%= link_to 'Destroy', association, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New association', new_association_path %>