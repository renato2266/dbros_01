<h2>All users</h2>

<table id="users">
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Edit</th>


  </tr>


<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.login, user %></td>
    <td><%=h user.email %></td>
    
   
    <td><%= link_to 'Show', user %>
    <%= link_to 'Edit', edit_user_path(user) %>
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

